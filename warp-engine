# Main menu loop
while true; do
    read -p "Select option (0-9): " choice

    case $choice in
        1)
            echo -e "${GREEN}ğŸš€ Starting Warp Engine server...${NC}"
            ./warp-engine-service start
            ;;
        2)
            echo -e "${GREEN}ğŸ¤– Creating new agent...${NC}"
            ./warp-engine-client create
            ;;
        3)
            echo -e "${GREEN}ğŸ“‹ Registered agents:${NC}"
            ./warp-engine-client list
            ;;
        4)
            read -p "Enter agent name: " agent_name
            echo -e "${GREEN}ğŸƒ Running agent: $agent_name${NC}"
            ./warp-engine-client run "$agent_name" "Test input"
            ;;
        5)
            echo -e "${GREEN}ğŸ“Š Agent Registry:${NC}"
            curl -s http://127.0.0.1:8788/api/agents | python -m json.tool
            ;;
        6)
            echo -e "${GREEN}ğŸ§ª Running tests...${NC}"
            python -m pytest tests/ -v
            ;;
        7)
            echo -e "${GREEN}ğŸ“ LaTeX Workflow${NC}"
            echo "Legacy LaTeX workflow - use agent interface instead"
            ;;
        8)
            echo -e "${GREEN}ğŸŒ Opening browser UI...${NC}"
            open "http://127.0.0.1:8788"
            ;;
        9)
            echo -e "${GREEN}ğŸ’» Entering CLI mode...${NC}"
            echo "Use ./warp-engine-client for CLI commands"
            ;;
        0)
            echo -e "${GREEN}ğŸ‘‹ Goodbye!${NC}"
            exit 0
            ;;
        *)
            echo -e "${RED}Invalid option. Please try again.${NC}"
            ;;
    esac

    echo ""
    echo -e "${YELLOW}Press Enter to continue...${NC}"
    read
    clear

    # Redisplay menu
    echo -e "${GREEN}Available Commands:${NC}"
    echo "  1) ğŸš€ Start Server         - Launch the Warp Engine server"
    echo "  2) ğŸ¤– New Agent           - Create a new agent interactively"
    echo "  3) ğŸ“‹ List Agents         - Show all registered agents"
    echo "  4) ğŸƒ Run Agent           - Execute a specific agent"
